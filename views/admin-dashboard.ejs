<!DOCTYPE html>
<html lang="en">
<head>
  <title>Admin Dashboard</title>
</head>
<body>
  <h1>Welcome, <%= user.username %></h1>
  <h3>Admin Dashboard</h3>

  <nav>
    <ul>
      <li><a href="/admin-dashboard">Dashboard</a></li>
      <li><a href="/manage-books">Manage Books</a></li>
      <li><a href="/manage-users">Manage Users</a></li>
    </ul>
  </nav>

  <hr>

  <% if (error) { %>
    <p style="color: red;"><%= error %></p>
  <% } %>

  <h2>Books</h2>
  <% if (books && books.length > 0) { %>
    <table border="1">
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Serial Number</th>
        <th>Category</th>
        <th>Actions</th>
      </tr>
      <% books.forEach((book) => { %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.serialNo %></td>
          <td><%= book.category %></td>
          <td>
            <button>Edit</button>
            <button>Delete</button>
          </td>
        </tr>
      <% }); %>
    </table>
  <% } else { %>
    <p>No books available.</p>
  <% } %>

  <hr>

  <h2>Users</h2>
  <% if (users && users.length > 0) { %>
    <table border="1">
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
      <% users.forEach((user) => { %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td>
            <button>Edit</button>
            <button>Delete</button>
          </td>
        </tr>
      <% }); %>
    </table>
  <% } else { %>
    <p>No users available.</p>
  <% } %>

</body>
</html>
